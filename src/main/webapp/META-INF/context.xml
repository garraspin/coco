<?xml version='1.0' encoding='utf-8'?>

<Context docBase="coco" path="/" reloadable="true" >
    <Resource auth="Container"
              driverClassName="org.postgresql.Driver"
              maxActive="10"
              maxIdle="5"
              maxWait="5000"
              name="jdbc/cocodb"
              password="admin"
              type="javax.sql.DataSource"
              url="jdbc:postgresql://localhost:5432/cocodb"
              username="postgres"
              validationQuery="select count(*) from pg_tables"/>
</Context>